nav {
	z-index: 200;
	position: relative;
	height: 120px;
	transition: 0.25s height ease-in-out;
}
nav.sticky {
	height: 60px;
}
nav ul.nav-center {
	position: fixed;
	height: 120px;
	background-color: #FCFAF9;
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: center;
	box-shadow: none;
	transition: 0.25s height ease-in-out,
				0.25s box-shadow ease-in-out;
}
nav.sticky ul.nav-center {
	position: fixed;
	height: 60px;
	background-color: #FCFAF9;
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: center;
	box-shadow: 0px 0px 10px 2px rgba(0,0,0,0.4);
}
nav ul.nav-center li.nav-item {
	font-family: 'Alkatra', sans-serif;
    padding: 13px 30px;
    list-style: none;
    margin: auto 0;
    font-size: 20px;
}
nav ul.nav-center li.nav-item a {
    border-bottom: 4px solid transparent;
    transition: border-bottom-color .35s ease-in-out;
}
nav ul.nav-center li.nav-item a:hover {
    border-bottom-color: #EE7674;
}
nav ul.nav-center li.nav-logo {
	height: 100%;
    margin: auto 0;
	padding: 5px 20px;
	list-style: none;
}
nav ul.nav-center li.nav-logo .logo-UVC {
	height: 110px;
	width: 110px;
	background-image: url('/assets/img/sans-titre.png');
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
	transition: height 0.25s ease-in-out,
				width 0.25s ease-in-out,
				background-image 0.25s ease-in-out;
}
nav.sticky ul.nav-center li.nav-logo .logo-UVC {
	height: 50px;
	width: 50px;
	background-image: url('/assets/img/logo-UVC-mini.webp');
}